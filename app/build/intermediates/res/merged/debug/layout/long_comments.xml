<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        <ImageView
            android:scaleType="center"
            android:id="@+id/comment_user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:background="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/comment_user_image"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:id="@+id/comment_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginRight="20dp"
            android:layout_below="@+id/comment_like"
            android:layout_alignLeft="@+id/comment_user_name"
            android:id="@+id/comment_user_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/comment_like"
            android:drawableLeft="@drawable/like"
            android:layout_marginRight="15dp"
            android:layout_marginTop="0dp"
            android:layout_centerVertical="true"
            android:layout_alignTop="@+id/comment_user_name"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/newGray"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/comment_user_content"
            android:layout_alignLeft="@+id/comment_user_content"
            android:id="@+id/comment_user_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>