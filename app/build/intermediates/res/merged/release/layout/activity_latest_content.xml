<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:background="#FFF562"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageButton
            android:src="@drawable/back_up"
            android:paddingLeft="15dp"
            android:background="@android:color/transparent"
            android:id="@+id/image_view_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/image_button_share"
            android:gravity="center_vertical"
            android:layout_marginRight="220dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/share_ui"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/image_button_collect"
            android:gravity="center_vertical"
            android:layout_marginRight="140dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/collect_pic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:textColor="@color/colorAccent"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/comment_ui"
            android:layout_marginRight="75dp"
            android:layout_alignParentRight="true"
            android:id="@+id/text_view_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:textColor="@color/colorAccent"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/parse"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:id="@+id/text_view_praise"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_view_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <WebView
                android:id="@+id/web_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </WebView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>